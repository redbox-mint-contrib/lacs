<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>au.edu.usq.fascinator.redbox</groupId>
    <artifactId>redbox</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>ReDBox</name>
    <properties>
        <staging.dir>${project.build.directory}/${project.artifactId}</staging.dir>
        <staging.home.dir>${staging.dir}/home</staging.home.dir>
        <jetty.version>6.1.24</jetty.version>
        <fascinator.version>0.6.0-SNAPSHOT</fascinator.version>
    </properties>
    <modules>
        <module>plugins/transformer/marc-authors</module>
    </modules>
    <dependencies>
        <!-- Fascinator Portal Web App -->
        <dependency>
            <groupId>au.edu.usq.fascinator</groupId>
            <artifactId>fascinator-portal</artifactId>
            <type>war</type>
            <classifier>skinny</classifier>
            <version>${fascinator.version}</version>
        </dependency>
        <!-- Fascinator Portal Dependencies -->
        <dependency>
            <groupId>au.edu.usq.fascinator</groupId>
            <artifactId>fascinator-portal</artifactId>
            <type>warpath</type>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator</groupId>
            <artifactId>fascinator-common</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <!-- Solr Web App -->
        <dependency>
            <groupId>org.apache.solr</groupId>
            <artifactId>solr-webapp</artifactId>
            <type>war</type>
            <version>1.4.0</version>
        </dependency>
        <!-- Jetty Web Server -->
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty</artifactId>
            <version>${jetty.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jsp-2.1-jetty</artifactId>
            <version>${jetty.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty-spring</artifactId>
            <version>${jetty.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>start</artifactId>
            <version>${jetty.version}</version>
        </dependency>
        <!-- ReDBox Project Plugins -->
        <dependency>
            <groupId>au.edu.usq.fascinator.redbox.plugins</groupId>
            <artifactId>plugin-transformer-marc-authors</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- Fascinator Plugins -->
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-access-derby</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-authentication-internal</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-harvester-oai-pmh</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-harvester-workflow</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-indexer-solr</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-roles-internal</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-storage-filesystem</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <dependency>
            <groupId>au.edu.usq.fascinator.plugins</groupId>
            <artifactId>plugin-transformer-solrmarc</artifactId>
            <version>${fascinator.version}</version>
        </dependency>
        <!-- Unit testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- Support retrieving dependencies from WAR artifacts -->
            <plugin>
                <groupId>org.appfuse</groupId>
                <artifactId>maven-warpath-plugin</artifactId>
                <version>2.0.2</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>add-classes</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Copy dependencies and configuration resources -->
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <!-- Unpack common workflow configuration -->
                    <execution>
                        <id>unpack-workflows</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <includes>workflows/**</includes>
                            <outputDirectory>${staging.dir}/home/harvest</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>au.edu.usq.fascinator</groupId>
                                    <artifactId>fascinator-common</artifactId>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- Fascinator and Solr web applications -->
                    <execution>
                        <id>copy-webapps</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${staging.dir}/webapps</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>au.edu.usq.fascinator</groupId>
                                    <artifactId>fascinator-portal</artifactId>
                                    <type>war</type>
                                    <classifier>skinny</classifier>
                                    <destFileName>portal.war</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.apache.solr</groupId>
                                    <artifactId>solr-webapp</artifactId>
                                    <type>war</type>
                                    <destFileName>solr.war</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- Unpack default Fascinator and Solr configuration -->
                    <execution>
                        <id>unpack-config</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <includes>portal/**,solr/**,workflows/**</includes>
                            <outputDirectory>${staging.dir}/home</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>au.edu.usq.fascinator</groupId>
                                    <artifactId>fascinator-portal</artifactId>
                                    <type>war</type>
                                    <classifier>skinny</classifier>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>au.edu.usq.fascinator.plugins</groupId>
                                    <artifactId>plugin-indexer-solr</artifactId>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- Fascinator plugins (without dependencies) -->
                    <execution>
                        <id>copy-plugins</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>au.edu.usq.fascinator.plugins</includeGroupIds>
                            <outputDirectory>${staging.dir}/plugins</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <!-- Plugin dependencies -->
                    <execution>
                        <id>copy-plugin-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <excludeTypes>war,warpath</excludeTypes>
                            <excludeGroupIds>au.edu.usq.fascinator.plugins,org.mortbay.jetty</excludeGroupIds>
                            <outputDirectory>${staging.dir}/lib</outputDirectory>
                        </configuration>
                    </execution>
                    <!-- Jetty launcher -->
                    <execution>
                        <id>copy-jetty-start</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.mortbay.jetty</groupId>
                                    <artifactId>start</artifactId>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${staging.dir}/jetty</outputDirectory>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                    <!-- Jetty dependencies -->
                    <execution>
                        <id>copy-jetty-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>org.mortbay.jetty</includeGroupIds>
                            <excludeArtifactIds>start</excludeArtifactIds>
                            <outputDirectory>${staging.dir}/jetty/lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-config</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${staging.dir}</outputDirectory>
                            <includeEmptyDirs>true</includeEmptyDirs>
                            <resources>
                                <resource>
                                    <directory>src/main/config</directory>
                                    <filtering>false</filtering>
                                    <excludes>
                                        <exclude>**/solrmarc/**</exclude>
                                    </excludes>
                                </resource>
                                <resource>
                                    <directory>src/main/config</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>**/solrmarc/**</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Compile for Java 1.6 -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <!-- Assemble distribution package -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-dist-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/dist.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>fascinator</id>
            <url>https://fascinator.usq.edu.au/nexus/content/groups/public</url>
        </repository>
        <repository>
            <id>fascinator-snapshots</id>
            <url>https://fascinator.usq.edu.au/nexus/content/groups/public-snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>
